<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :stars %><br>
    <%= form.number_field :stars %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
